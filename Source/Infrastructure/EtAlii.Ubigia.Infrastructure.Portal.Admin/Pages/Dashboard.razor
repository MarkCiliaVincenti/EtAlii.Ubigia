@page "/"

@namespace EtAlii.Ubigia.Infrastructure.Portal.Admin

<Row Flex="Flex.Row.AlignContent.Center" >
    <Column ColumnSize="DefaultLayout.ItemDashboardColumnWidth">
        <Card Margin="DefaultLayout.Margin">
            <CardBody>
                <CardTitle Size="5">
                    <Icon Name="@("bi bi-people")"/>
                    Accounts
                </CardTitle>
                <CardText>
                    <Table Striped="true" Hoverable="true" Borderless="true">
                        <TableHeader>
                            <TableRow>
                                <TableHeaderCell>#</TableHeaderCell>
                                <TableHeaderCell>Name</TableHeaderCell>
                                <TableHeaderCell>Spaces</TableHeaderCell>
                            </TableRow>
                        </TableHeader>
                        <TableBody>
                            @foreach(var account in _accounts)
                            {
                                <TableRow>
                                    <TableRowHeader @onclick="@(() => OnEditAccount(account))">@account.Index</TableRowHeader>
                                    <TableRowCell @onclick="@(() => OnEditAccount(account))">@account.Name</TableRowCell>
                                    <TableRowCell @onclick="@(() => OnEditAccount(account))"><Badge Color="Color.Primary" Pill> @account.Spaces</Badge></TableRowCell>
                                </TableRow>
                            }
                        </TableBody>
                    </Table>
                </CardText>
                <Button Color="Color.Primary" Size="Size.Small" @onclick="OnManageAccounts">Manage</Button>
            </CardBody>
        </Card>
    </Column>

    <Column ColumnSize="DefaultLayout.ItemDashboardColumnWidth">
        <Card Margin="DefaultLayout.Margin">
            <CardBody>
                <CardTitle Size="5">
                    <Icon Name="@("bi bi-hdd-rack")"/>
                    Storage
                </CardTitle>
                <CardText>
                    <Table Striped="true" Hoverable="true" Borderless="true">
                        <TableHeader>
                            <TableRow>
                                <TableHeaderCell>#</TableHeaderCell>
                                <TableHeaderCell>Name</TableHeaderCell>
                                <TableHeaderCell>Activity</TableHeaderCell>
                            </TableRow>
                        </TableHeader>
                        <TableBody>
                            @foreach (var storage in _storages)
                            {
                                <TableRow>
                                    <TableRowHeader>@storage.Index</TableRowHeader>
                                    <TableRowCell>@storage.Name</TableRowCell>
                                    <TableRowCell><Badge Color="Color.Primary" Pill>324 Kt/pm</Badge></TableRowCell>
                                </TableRow>
                            }
                        </TableBody>
                    </Table>
                </CardText>
                <Button Color="Color.Primary" Size="Size.Small" Position="Position.Sticky.End">Manage</Button>
            </CardBody>
        </Card>
    </Column>

